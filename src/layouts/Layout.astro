---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string;
}

const { title = 'Home' } = Astro.props;
const siteTitle = 'Shachi Solanki';
const pageTitle = title === 'Home' ? siteTitle : `${title} Â· ${siteTitle}`;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Ephesis&family=Sora:wght@400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<Header />
		<main class="layout-main">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	html {
		scroll-behavior: smooth;
	}
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
		font-family: 'Sora', system-ui, sans-serif;
		background: #faf6f0;
		color: #1a1a1a;
		-webkit-font-smoothing: antialiased;
		display: flex;
		flex-direction: column;
	}
</style>

<style>
	.layout-main {
		flex: 1;
	}
</style>
